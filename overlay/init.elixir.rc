# ElixirKernel init script

on boot
	# Override early zRAM settings
	write /sys/block/zram0/comp_algorithm lz4

	# Set SQLite flags for F2FS because some DBs might be opened early
	setprop debug.sqlite.journalmode OFF
	setprop debug.sqlite.syncmode OFF

	# USB mass storage
	mkdir /config/usb_gadget/g1/functions/mass_storage.0

# Initialization
on property:sys.boot_completed=1
   # Set default profile on first boot
    exec u:r:init:s0 root root -- /init.elixir.rc
    exec u:r:su:s0 root root -- /init.elixir.rc
	setprop spectrum.support 1
	setprop persist.spectrum.kernel ElixirKernel


# Profiles
on property:persist.elixir.profile=battery
	setprop elixir.big_max 1056000
	setprop elixir.little_max 1516800
	setprop elixir.big_boost 0
	setprop elixir.little_boost 979200
	setprop elixir.boost_duration 64
	setprop elixir.cpu_governor schedutil
	setprop elixir.gpu_governor msm-adreno-tz

on property:persist.elixir.profile=balanced
	setprop elixir.big_max 2649600
	setprop elixir.little_max 1766400
	setprop elixir.big_boost 902400
	setprop elixir.little_boost 1056000
	setprop elixir.boost_duration 80
	setprop elixir.cpu_governor schedutil
	setprop elixir.gpu_governor msm-adreno-tz

on property:persist.elixir.profile=performance
	setprop elixir.big_max 2803200
	setprop elixir.little_max 1766400
	setprop elixir.big_boost 1363200
	setprop elixir.little_boost 1516800
	setprop elixir.boost_duration 125
	setprop elixir.cpu_governor schedutil
	setprop elixir.gpu_governor msm-adreno-tz


# Profile engine
# Sets the maximum frequency of the big CPU cluster
on property:elixir.big_max=*
	write /sys/devices/system/cpu/cpu4/cpufreq/scaling_max_freq ${elixir.big_max}

# Sets the maximum frequency of the little CPU cluster
on property:elixir.little_max=*
	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq ${elixir.little_max}

# Sets the input boost frequency of the little CPU cluster
on property:elixir.little_boost=*
	write /sys/module/cpu_input_boost/parameters/input_boost_freq_lp ${elixir.little_boost}

# Sets the input boost frequency of the big CPU cluster
on property:elixir.big_boost=*
	write /sys/module/cpu_input_boost/parameters/input_boost_freq_hp ${elixir.big_boost}

# Sets the length of an input boost
on property:elixir.boost_duration=*
	write /sys/module/cpu_input_boost/parameters/input_boost_duration ${elixir.boost_duration}

# Sets the frequency governor of both CPU clusters
on property:elixir.cpu_governor=*
	write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor ${elixir.cpu_governor}
	write /sys/devices/system/cpu/cpu4/cpufreq/scaling_governor ${elixir.cpu_governor}

# Sets the frequency governor of the GPU
on property:elixir.gpu_governor=*
	write /sys/class/kgsl/kgsl-3d0/devfreq/governor ${elixir.cpu_governor}


# Profile bridges: Franco Kernel Manager
# Update the Spectrum profile, that'll be our primary set
on property:fku.perf.profile=0
	setprop persist.spectrum.profile 2

on property:fku.perf.profile=1
	setprop persist.spectrum.profile 0

on property:fku.perf.profile=2
	setprop persist.spectrum.profile 1


# Profile bridges: Spectrum
# Balanced
on property:persist.spectrum.profile=0
	setprop persist.elixir.profile balanced

# Performance
on property:persist.spectrum.profile=1
	setprop persist.elixir.profile performance

# Battery
on property:persist.spectrum.profile=2
	setprop persist.elixir.profile battery

# Gaming
on property:persist.spectrum.profile=3
	setprop persist.elixir.profile performance


# USB mass storage support
on property:sys.usb.config=mass_storage && property:sys.usb.configfs=1
	write /config/usb_gadget/g1/configs/b.1/strings/0x409/configuration "msc"
	symlink /config/usb_gadget/g1/functions/mass_storage.0 /config/usb_gadget/g1/configs/b.1/f1
	write /config/usb_gadget/g1/UDC ${sys.usb.controller}
	setprop sys.usb.state ${sys.usb.config}

on property:sys.usb.config=mass_storage,adb && property:sys.usb.configfs=1
	start adbd

on property:sys.usb.ffs.ready=1 && property:sys.usb.config=mass_storage,adb && property:sys.usb.configfs=1
	write /config/usb_gadget/g1/configs/b.1/strings/0x409/configuration "adb_msc"
	symlink /config/usb_gadget/g1/functions/mass_storage.0 /config/usb_gadget/g1/configs/b.1/f1
	symlink /config/usb_gadget/g1/functions/ffs.adb /config/usb_gadget/g1/configs/b.1/f2
	write /config/usb_gadget/g1/UDC ${sys.usb.controller}
	setprop sys.usb.state ${sys.usb.config}


